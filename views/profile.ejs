<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="../stylesheets/profilestyle.css">    
</head>

<body>

    <a href="/logout" class="btn btn-danger mx-4 my-3">Logout</a>

    <div class="dashboard">
        <header class="dashboard-header">
            <h1>Dashboard</h1>
            <div class="notifications" id="notifications">
                <span>ðŸ”” 5 New Notifications</span>
                <div class="notification-dropdown" id="notificationDropdown">
                    <ul>
                        <li>Notification 1: New comment on your post</li>
                        <li>Notification 2: 5 new signups today</li>
                        <li>Notification 3: Scheduled maintenance at 10 PM</li>
                        <li>Notification 4: New message from client</li>
                        <li>Notification 5: Server restarted successfully</li>
                    </ul>
                </div>
            </div>
            <button class="menu-toggle" id="menuToggle">â˜°</button>
        </header>

        <nav class="sidebar" id="sidebar">
            <button class="close-sidebar" id="closeSidebar">âœ–</button>
            <ul>
                <li data-target="home">Home</li>
                <li data-target="analytics">Analytics</li>
                <li data-target="settings">Settings</li>
                <li data-target="reports">Reports</li>
                <li data-target="support">Support</li>
            </ul>
        </nav>

        <main class="content">
            <!-- Home Section (default) -->
            <section id="home" class="content-section active">
                <h2>Performance Chart</h2>
                <canvas id="performanceChart"></canvas>

                <h2>User Statistics</h2>
                <div class="stats">
                    <div class="stat-item">Active Users: 350</div>
                    <div class="stat-item">New Signups: 45</div>
                </div>

                <h2>Recent Transactions</h2>
                <table class="transaction-table">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Description</th>
                            <th>Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>07.09.2024</td>
                            <td>Payment from Client A</td>
                            <td>$500</td>
                        </tr>
                        <tr>
                            <td>06.09.2024</td>
                            <td>Refund to Customer B</td>
                            <td>-$120</td>
                        </tr>
                        <tr>
                            <td>05.09.2024</td>
                            <td>Invoice to Supplier C</td>
                            <td>$250</td>
                        </tr>
                    </tbody>
                </table>
            </section>

            <!-- Analytics Section -->
            <section id="analytics" class="content-section" style="display: none;">
                <h2>Analytics Dashboard</h2>

                <!-- User Statistics Chart -->
                <div class="chart-container">
                    <h3>User Statistics</h3>
                    <canvas id="userStatisticsChart"></canvas>
                </div>

                <!-- Traffic Sources Chart -->
                <div class="chart-container">
                    <h3>Traffic Sources</h3>
                    <canvas id="trafficSourcesChart"></canvas>
                </div>

                <!-- Performance Overview -->
                <div class="chart-container">
                    <h3>Performance Overview</h3>
                    <canvas id="performanceOverviewChart"></canvas>
                </div>
            </section>

            <!-- Settings Section -->
            <section id="settings" class="content-section" style="display: none;">
                <h2>Settings</h2>

                <!-- Profile Settings -->
                <div class="settings-group">
                    <h3>Profile Information</h3>
                    <form id="profile-settings">
                        <label for="username">Username:</label>
                        <input type="text" id="username" value="JohnDoe123" />

                        <label for="email">Email:</label>
                        <input type="email" id="email" value="johndoe@example.com" />

                        <button type="submit">Save Changes</button>
                    </form>
                </div>

                <!-- Password Settings -->
                <div class="settings-group">
                    <h3>Change Password</h3>
                    <form id="password-settings">
                        <label for="current-password">Current Password:</label>
                        <input type="password" id="current-password" />

                        <label for="new-password">New Password:</label>
                        <input type="password" id="new-password" />

                        <label for="confirm-password">Confirm New Password:</label>
                        <input type="password" id="confirm-password" />

                        <button type="submit">Change Password</button>
                    </form>
                </div>

                <!-- Notification Settings -->
                <div class="settings-group">
                    <h3>Notification Preferences</h3>
                    <form id="notification-settings">
                        <label>
                            <input type="checkbox" checked /> Email Notifications
                        </label>

                        <label>
                            <input type="checkbox" /> SMS Notifications
                        </label>

                        <label>
                            <input type="checkbox" checked /> Push Notifications
                        </label>

                        <button type="submit">Update Preferences</button>
                    </form>
                </div>

                <!-- General Settings -->
                <div class="settings-group">
                    <h3>General Settings</h3>
                    <label>
                        <input type="checkbox" checked /> Enable dark mode
                    </label>

                    <label>
                        <input type="checkbox" /> Auto-save changes
                    </label>
                </div>
            </section>

            <!-- Reports Section -->
            <section id="reports" class="content-section" style="display: none;">
                <h2>Reports</h2>

                <!-- Filter and Download Options -->
                <div class="reports-options">
                    <label for="dateRange">Date Range:</label>
                    <input type="date" id="startDate"> to
                    <input type="date" id="endDate">

                    <button id="downloadReport">Download as CSV</button>
                </div>

                <!-- Sales Report Table -->
                <div class="reports-table-container">
                    <h3>Sales Report</h3>
                    <table class="reports-table">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Product</th>
                                <th>Quantity</th>
                                <th>Total Revenue</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>2024-09-01</td>
                                <td>Product A</td>
                                <td>100</td>
                                <td>$1,000</td>
                            </tr>
                            <tr>
                                <td>2024-09-02</td>
                                <td>Product B</td>
                                <td>50</td>
                                <td>$500</td>
                            </tr>
                            <tr>
                                <td>2024-09-03</td>
                                <td>Product C</td>
                                <td>75</td>
                                <td>$750</td>
                            </tr>
                            <tr>
                                <td>2024-09-04</td>
                                <td>Product D</td>
                                <td>120</td>
                                <td>$1,200</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </section>

            <!-- Support Section -->
            <section id="support" class="content-section" style="display: none;">
                <h2>Support</h2>

                <!-- FAQ Section -->
                <div class="faq-section">
                    <h3>Frequently Asked Questions (FAQs)</h3>
                    <ul>
                        <li>
                            <strong>Q: How can I reset my password?</strong>
                            <p>A: You can reset your password by clicking on "Forgot Password" on the login page and
                                following the instructions.</p>
                        </li>
                        <li>
                            <strong>Q: How can I contact support?</strong>
                            <p>A: You can fill out the contact form below, or email us directly at support@example.com.
                            </p>
                        </li>
                        <li>
                            <strong>Q: Where can I find my purchase history?</strong>
                            <p>A: Your purchase history is available under the "Account" section in your profile
                                settings.</p>
                        </li>
                    </ul>
                </div>

                <!-- Contact Form Section -->
                <div class="contact-form-section">
                    <h3>Contact Us</h3>
                    <form id="contactForm">
                        <label for="name">Name:</label>
                        <input type="text" id="name" placeholder="Your Name" required>

                        <label for="email">Email:</label>
                        <input type="email" id="email" placeholder="Your Email" required>

                        <label for="message">Message:</label>
                        <textarea id="message" rows="4" placeholder="Your Message" required></textarea>

                        <button type="submit">Send Message</button>
                    </form>

                    <!-- Confirmation message -->
                    <div id="formConfirmation" style="display: none;">
                        <p>Thank you for contacting us! We will get back to you shortly.</p>
                    </div>
                </div>
            </section>
        </main>
    </div>

    <script src="../javascripts/profilescript.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
        integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
        integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
        crossorigin="anonymous"></script>
</body>

</html>